{
  "name": "UIkit 3 migration helper (output in browser console)",
  "description": "This extension helps you to migrate your site to UIkit 3.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "uikit-19.png"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["hook.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "19": "uikit-19.png",
    "48": "uikit-48.png",
    "128": "uikit-128.png"
  }
}
